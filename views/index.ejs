<% include partials/header %>

<div class="container-fluid"style="margin-left: 0; padding-left: 0 ;margin-right: auto; padding-right: auto ;>
		<div class="container" style="margin-left: 0; padding-left: 0 ;margin-right: auto; padding-right: auto ;">
			<div class="formBox" >
				<form method="post" action="/students/add" data-parsley-validate="">
						<div class="row" style="background-color:#31DA89">
							<div class="col-sm-12" >
								<h1></br>Register User(Student) Form</h1>
							</div>
						</div></br></br>

						<div class="row">
						<div class="col-sm-2"></div>
							<div class="col-sm-4">
								<div class="inputBox ">
									<div class="inputText">Username</div>
									<input type="text" name="username" class="input" required="">
								</div>
							</div>

							<div class="col-sm-4">
								<div class="inputBox">
									<div class="inputText">First Name</div>
									<input type="text" name="firstname" class="input" required="">
								</div>
							</div>
						</div>
						<div class="row">
						<div class="col-sm-2"></div>
							<div class="col-sm-4">
								<div class="inputBox ">
									<div class="inputText">Last Name</div>
									<input type="text" name="lastname" class="input" required="">
								</div>
							</div>

							<div class="col-sm-4">
							
								<div class="inputBox"></br>
									<select required="" class="form-control" name="gender" id="sel1" >
										<option value="">Gender</option>
										<option value="Male">Male</option>
										<option value="Female">Female</option>
										
										</select>
								</div>
							</div>
						</div>
						
						<div class="row">
						<div class="col-sm-2"></div>
							<div class="col-sm-4">
								<div class="form-group">
									<div class="inputText" style="font-family: sans-serif;font-size: 24px;color:gray;">Birthday</div>
									 <input type="date" class="form-control" name="birthday" id="exampleInputDOB1" placeholder="Date of Birth" required="">
								</div>
							</div>

							<div class="col-sm-4"></br>
								<div class="inputBox">
									<div class="inputText">Education</div>
									<input type="text" name="education" class="input" required="">
								</div>
							</div>
						</div>
						
						<div class="row">
						<div class="col-sm-2"></div>
							<div class="col-sm-4">
								<div class="inputBox ">
									<div class="inputText">Email</div>
									<input type="text" name="email" class="input" required="">
								</div>
							</div>

							<div class="col-sm-4">
								<div class="inputBox">
									<div class="inputText">Password</div>
									<input type="password" name="password" class="input" required="">
								</div>
							</div>
						</div>
						

						<div class="row">
						<div class="col-sm-2"></div>
							<div class="col-sm-8">
								<div class="inputBox">
									<div class="inputText">Interested Fields</div>
									<textarea class="input" name="infields"></textarea>
								</div>
							</div>
						</div>

						<div class="row">
							<div class="col-sm-2"></div>
							<div class="col-sm-4">
								<button class="btn btn-danger" type="submit" style="width: 100%;
							height: 50px;border-color: #31DA89;outline: none;background: #31DA89;color: white;">SUBMIT</button>
								<!-- <input type="submit" name="" class="button" value="SUBMIT"> -->
							</div>
							<div class="col-sm-4">
								<button class="btn btn-danger" type="reset" style="width: 100%;
							height: 50px;border-color: #31DA89;outline: none;background: white;color: #31DA89;">RESET</button>
							</div>
						</div></br></br>
				</form>
			</div>
		</div>
	</div></br></br></br>

			<div class="col-sm-1"></div>
			<div class="col-sm-10">
				<table class="table table-hover">
					<thead>
					  <tr>
						<th>Username</th>
						<th>Firstname</th>
						<th>Lastname</th>
						<th>Gender</th>
						<th>Birthday</th>
						<th>Education</th>
						<th>Email</th>
						<th>Password</th>	
						<th>Interested Fields</th>
						<th></th>
						<th></th>
					  </tr>
					</thead>
					<tbody>
					  <% docs.map(function(doc) {  %>	<tr>
						<td><%= doc.username %></td>
						<td><%= doc.firstname %></td>
						<td><%= doc.lastname %></td>
						<td><%= doc.gender %></td>
						<td><%= doc.birthday %></td>
						<td><%= doc.education %></td>
						<td><%= doc.email %></td>
						<td><%= doc.password %></td>
						<td><%= doc.infields %></td>
						<td><a href="/students/edit/<%= doc._id %>"><button class="btn btn-danger"  style="width: 100%;
											height: 29px;border-color: #31DA89;outline: none;background: #31DA89;color: white;">Edit</button></a></td>
						<td><a href="/students/delete/<%= doc._id %>"><button class="btn btn-danger" style="width: 100%;
											height: 30px;border-color: #31DA89;outline: none;background: white;color: #31DA89;"onclick="return confirm('Are you sure you want to delete this item?');">Delete</button></a></td>
					  </tr> <% }); %>
					 
					</tbody>
				  </table>
 </div>
 
 <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script>

<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" ></script>
<script src="https://code.jquery.com/jquery-3.2.1.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/parsley.js/2.8.0/parsley.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/parsley.js/2.8.0/parsley.min.js"></script>
